void printNotebook(NotebookType* arr){
	for(int i = 0; i<arr->size; i++){
		printf("%f\n", arr->elements[i].value);
	}
}

void addEvidence(NotebookType* arr, EvidenceType* ev){
    printf("%d\n", ev->id);
     printf("Size: %d\n", arr->size);
    printf("Capacity: %d\n", arr->capacity);
